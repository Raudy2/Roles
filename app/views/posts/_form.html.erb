<%= form_with(model: post, class: 'row') do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mb-3'>
    <%= form.label :title, class: 'form-label-sm'%>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', maxlength: 1000 %>
  </div>

  <div class="mb-3">
    <%= form.label :images %>
    <%= form.file_field :images %>
  </div>

  <div class='action'>
    <%= form.submit %>
  </div>
<% end %>
<p style="color: green"><%= notice %></p>



<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <%= render post %>
            <%= link_to "Show this post", post %>
            <%= link_to "New post", new_post_path %>
          </div>  
        </div>
      </div>      
    </div>        
  <% end %>
</div>


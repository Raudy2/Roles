<div class=" flex flex-1 m-10 justify-end  ">
  <%= link_to "Back", posts_path, class: "px-7 py-3 font-medium text-sm  uppercase rounded shadow-md hover:shadow-lg focus:bg-blue-700 focus:shadow-lg btn-primary-outline hover:text-white hover:bg-primary-500 focus:ring-0  transition duration-150 ease-in-out w-46" %>
</div>
<div class="flex justify-center w-full mx-auto sm:w-6/12 md:w-8/12 items-center flex-wrap h-full g-6 text-gray-800">
  <div class="bg-white p-8 rounded-md shadow-lg" >  
    <%= render @post %>
    <div class=" flex space-x-4 mb-6 text-sm font-media items-center justify-center">
      <%= link_to "Edit", edit_post_path(@post), class: "px-7 py-3 font-medium text-sm  uppercase rounded shadow-md hover:shadow-lg focus:bg-blue-700 focus:shadow-lg btn-primary-outline hover:text-white hover:bg-primary-500 focus:ring-0  transition duration-150 ease-in-out w-46" if can_edit?(@post) %> |
      <%= button_to "Destroy", @post, class: "px-7 py-3 font-medium uppercase rounded shadow-md hover:shadow-lg focus:bg-red-700 focus:shadow-lg  text-sm btn-danger-outline hover:bg-danger-600 hover:text-white focus:ring-0  transition duration-150 ease-in-out w-46", method: :delete %>
    </div>
  </div>
</div>


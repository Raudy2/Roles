<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="d-flex align-items-center min-vh-100 justify-content-center">
    <div class="card" style="width: 18rem;">
      <%= render @post %>
      <div class="btn-group" role="group" aria-label="Basic outlined example">
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" if can_edit?(@post) %> |
        <%= button_to "Destroy", @post, class: "btn btn-danger", method: :delete %> |
        <%= link_to "Back", posts_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>



